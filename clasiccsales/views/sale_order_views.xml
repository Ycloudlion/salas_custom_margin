<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_order_form_section_margins" model="ir.ui.view">
        <field name="name">sale.order.form.section.margins</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <!-- Buscar la última página del notebook y agregar antes de ella -->
            <xpath expr="(//notebook//page)[last()]" position="before">
                <page string="Margins by Section" name="section_margins">
                    <field name="section_margins_html" readonly="1" nolabel="1"/>
                </page>
            </xpath>
        </field>
    </record>
</odoo>

